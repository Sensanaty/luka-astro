---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  frontmatter?: {
    title: string;
  };
  entry?: unknown;
}

const { frontmatter, entry } = Astro.props;

// @ts-ignore
const title = frontmatter?.title ?? entry?.data?.title ?? "LUKA";
---

<BaseLayout title={"LUKA - " + title}>
  <a href="/shenanigans" class="cursor-pointer font-bold underline decoration-2 decoration-amber-500 hover:text-amber-500 hover:decoration-white">back</a>

  <article class="mt-4">
    <h1 class="text-2xl underline decoration-amber-500 mb-2">{title}</h1>

    <div class="prose">
      <slot />
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose {
    @apply font-sans;

    a {
      @apply cursor-pointer font-bold underline decoration-2 decoration-amber-500 hover:text-amber-500 hover:decoration-white;
    }
  }
</style>
